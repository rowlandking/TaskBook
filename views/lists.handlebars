<div class = "addlists">
  <div class="input-group">
    <input type="text" class="form-control" name="lname" title="List Title" style="color:#888"; value="New List..." onfocus="inputFocus(this)" onBlur="inputBlur(this)">
    <span class="input-group-btn">
      <button class="btn btn-default" type="button" onClick="visibleForm('editlist')">
        <span class="glyphicon glyphicon-plus"></span>
      </button>
    </span>
    
  </div><!-- /input-group -->
</div>
<div id="editlist" class="alert alert-info">
  <!--<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>-->
  <strong>Edit List</strong> Better check yourself, you're not looking too good.<br>
  <button type="button" class="default" onClick="visibleForm('editlist')">Add</button>
  <button type="button" class="default" onClick="visibleForm('editlist')">Cancel</button>
</div>
<div id="helppage" class="alert alert-info">
  <!--<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>-->
  <strong>Help</strong> To add a new task please click the "My Tasks" tab on the navigation menu.<br>
  <button type="button" class="default" onClick="visibleForm('helppage')">Got it!</button>
</div>

<div id="settingspage" class="alert alert-info">
  <!--<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>-->
  <strong>Settings</strong> You want to change some settings.<br>
  <button type="button" class="default" onClick="visibleForm('settingspage')">Save</button>
</div>
	<div class = "lists">
		<ul class="list-group">
			{{#each mylists}}
      <a href="#" onClick="visibleTaskForm('editlist{{id}}')" style="  color: #000000; text-decoration: none; "/>
			<li class="list-group-item"> <span class="badge">{{taskcount}}</span>{{name}}</li></a>
      <div id="editlist{{id}}" class="alert alert-info myalertstyle" style="display:none; z-index:1080">
