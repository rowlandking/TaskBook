		<div class = "addtasks">
			<div class="input-group">
				<input type="text" class="form-control" name="tname" title="Task Title" style="color:#888"; value="New Task..." onfocus="inputFocus(this)" onBlur="inputBlur(this)">
				<span class="input-group-btn">
					<button class="btn btn-default" type="button" onClick="visibleForm('edittask')">
						<span class="glyphicon glyphicon-plus"></span>
					</button>
				</span>
			</div><!-- /input-group -->
		</div>
		<div id="edittask" class="alert alert-info">
			<!--<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>-->
